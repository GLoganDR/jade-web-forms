doctype html

html
  head
    meta(charset='utf-8')
    title Boxes
    link(rel='stylesheet', href='/css/style.css')
  body
    form(method='post', action='/boxes')
      label Enter colors: 
      textarea(name='colors') blue, green, yellow, orange, pink, black, red, white, cyan, brown, purple, olive, 
      label Enter Number of Boxes: 
      input(type='text', name='count', placeholder='# of Boxes', autofocus=true) 
      label Enter width of Boxes: 
      input(type='text', name='width', placeholder='width') 
      label Enter height of Boxes: 
      input(type='text', name='height', placeholder='width') 
      button Generate boxes
