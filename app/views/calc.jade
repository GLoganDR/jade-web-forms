doctype html

html
  head
    meta(charset='utf-8')
    title Calculator
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Calculator
    h3 Answer: #{ans}
    form(method='post', action='/calc')
      textarea(name='test') 
      label Enter First Number: 
      input(type='text', name='x', placeholder='x', autofocus=true) 
      label Enter Mathematical Symbol: 
      input(type='text', name='symbol', placeholder='+, -, *, /') 
      label Enter Second Number: 
      input(type'text', name='y', placeholder='y') 
      button Calculate


